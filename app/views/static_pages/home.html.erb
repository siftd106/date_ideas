<div class='row home'>
  <form role="form col-md-4">
    <div class="form-group">
      <label for="city">City</label>
      <input type="text" class="form-control" id="city" placeholder="Grand Rapids">
    </div>
  </form>
  <%= button_tag class: 'submit btn btn-primary btn-info btn-lg col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1' do %>
