<div class='idea'>
  <h4 class='idea-header'>Date Idea</h4>
  <div class='well'>
    <p><%= @idea.description %></p>
  </div>
  <div class='well'>
    <p>Duration: <%= @idea.duration ? @idea.duration.duration : 'N/A' %></p>
    <p># Destinations: <%= @idea.destination ? @idea.destination.destinations : 'N/A' %></p>
    <p>Price: <%= @idea.price ? @idea.price.price_range : 'N/A' %></p>
  </div>
  <div class='row'>
    <div class='col-md-6 col-xs-6'>
      <% if prev_idea = @idea.prev_idea %>
        <%= link_to idea_url(prev_idea) do %>
          <button class='btn btn-default btn-primary'>
            <%= image_tag 'image-left.png' %>
          </button>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-6 col-xs-6'>
      <% if next_idea = @idea.next_idea %>
        <%= link_to idea_url(next_idea) do %>
          <button class='btn btn-default btn-primary pull-right'>
            <%= image_tag 'image-right.png' %>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
