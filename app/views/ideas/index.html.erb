<div class='row'>
  <div class='col-md-6'>
    <% if @include_prev_link %>
      <%= link_to ideas_url(prev_idea_id: @idea.id, prev: true) do %>
        <button class='btn btn-default'>
          <img src="/assets/image-left.png" />
        </button>
      <% end %>
    <% end %>
  </div>
  <div class='col-md-6'>
    <% if @include_next_link %>
      <%= link_to ideas_url(prev_idea_id: @idea.id, next: true) do %>
        <button class='btn btn-default pull-right'>
          <img src="/assets/image-right.png" />
        </button>
      <% end %>
    <% end %>
  </div>
</div>
<h4>Date Idea</h4>
<div class='well'>
  <p><%= @idea.description %></p>
</div>
<div class='well'>
  <p>Duration: <%= @idea.duration.duration %></p>
  <p># Destinations: <%= @idea.destination.destinations %></p>
  <p>Price: <%= @idea.price.price_range %></p>
</div>

